{% extends 'base.html.twig' %}

{% block body %}
    <h1>Conference</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ conference.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ conference.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ conference.description }}</td>
            </tr>
            <tr>
                <th>Createon</th>
                <td>{% if conference.createOn %}{{ conference.createOn|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Mustvisit</th>
                <td>{% if conference.mustVisit %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Venueid</th>
                <td>{{ conference.venueId }}</td>
            </tr>
            <tr>
                <th>Lectureid</th>
                <td>{{ conference.lectureId }}</td>
            </tr>
            <tr>
                <th>Breakid</th>
                <td>{{ conference.breakId }}</td>
            </tr>
            <tr>
                <th>Userid</th>
                <td>{{ conference.userId }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('conference_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('conference_edit', { 'id': conference.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
